---
import { ArrowUpIcon, PuzzleIcon } from "lucide-svelte"
import MainLayout from "../layouts/main.astro"
---

<MainLayout title="Welcome" description="Pallad">
    <div class="flex fixed right-4 top-4 ml-4 z-10 bg-secondary gap-4 items-center p-4 rounded-xl shadow-2xl">
        <PuzzleIcon size={32} class="text-primary" />
        <div class="flex flex-col gap-2">
            <h2 class="text-lg">Pin the extension</h2>
            <p class="text-mint">Click on the puzzle icon and pin Pallad for easier access.</p>
        </div>
        <ArrowUpIcon />
    </div>
    <div class="container flex flex-col justify-center items-center mt-48 mb-32">
        <div class="flex flex-col justify-between items-center w-[360px] h-[600px] bg-secondary rounded-3xl p-8 shadow-2xl">
            <img src="/logo.svg" alt="logo" width={100} height={100} class="mt-8" />
            <div class="flex flex-col gap-4 text-center">
                <h1 class="text-3xl">Ready to open</h1>
                <p class="text-mint text-lg text-balance">Just click on the Pallad icon in your extensions</p>
            </div>
            <a href="/docs" class="flex bg-neutral w-full p-4 rounded-2xl gap-4">
                <div class="flex justify-center items-center rounded-full bg-secondary w-12 h-12">
                    <img src="/question2.svg" />
                </div>
                <div class="flex flex-col">
                    <h2>About Pallad</h2>
                    <p>More info about us</p>
                </div>
            </a>
        </div>
    </div>
</MainLayout> 